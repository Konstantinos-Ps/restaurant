                <!-- Contact Info -->
                <div>
                    <h4 class="text-lg font-semibold text-white mb-6">
                        Contact
                    </h4>
                    <div class="space-y-4">
                        <div class="flex items-start space-x-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="text-pink-400 mt-1"
                            >
                                <path
                                    d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                                ></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                            <div class="text-slate-300">
                                <div>123 Culinary Street</div>
                                <div>Downtown, NY 10001</div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="text-pink-400"
                            >
                                <path
                                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                ></path>
                            </svg>
                            <div class="text-slate-300">(555) 123-4567</div>
                        </div>
                        <div class="flex items-center space-x-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="text-pink-400"
                            >
                                <path
                                    d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                                ></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                            <div class="text-slate-300">hello@savoria.com</div>
                        </div>
                    </div>
                </div>

                <!-- Hours -->
                <div>
                    <h4 class="text-lg font-semibold text-white mb-6">Hours</h4>
                    <div class="space-y-2 text-slate-300">
                        <div class="flex justify-between">
                            <span>Mon-Thu</span>
                            <span>5:00 PM - 10:00 PM</span>
                        </div>
                        <div class="flex justify-between">
                            <span>Fri-Sat</span>
                            <span>5:00 PM - 11:00 PM</span>
                        </div>
                        <div class="flex justify-between">
                            <span>Sunday</span>
                            <span>4:00 PM - 9:00 PM</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Google Maps -->
            <div class="w-full h-96 mb-12 rounded-xl overflow-hidden">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.215209132579!2d-73.98784492413002!3d40.74844097138978!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c259a9b3117469%3A0xd134e199a405a163!2sEmpire%20State%20Building!5e0!3m2!1sen!2sus!4v1712345678901!5m2!1sen!2sus"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    class="rounded-xl"></iframe>
            </div>

            <!-- Bottom section -->
            <div class="border-t border-slate-800 pt-8">
                <div
                    class="flex flex-col md:flex-row justify-between items-center"
                >
                    <p class="text-slate-400 text-sm mb-4 md:mb-0">
                        © 2024 Savoria Restaurant. All rights reserved.
                    </p>
                    <div class="flex space-x-6 text-sm">
                        <a
                            href="#"
                            class="text-slate-400 hover:text-pink-400 transition-colors duration-300"
                            >Privacy Policy</a
                        >
                        <a
                            href="#"
                            class="text-slate-400 hover:text-pink-400 transition-colors duration-300"
                            >Terms of Service</a
                        >
                        <a
                            href="#"
                            class="text-slate-400 hover:text-pink-400 transition-colors duration-300"
                            >Cookie Policy</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
